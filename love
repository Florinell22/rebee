<script>
  // -------------------- Particule steluÈ›e --------------------
  const particlesContainer = document.getElementById('particles');
  for(let i=0; i<50; i++){
    const particle = document.createElement('div');
    particle.classList.add('particle');
    particle.style.left = Math.random() * window.innerWidth + 'px';
    particle.style.animationDuration = (5 + Math.random()*10) + 's';
    particle.style.width = particle.style.height = (5 + Math.random()*10) + 'px';
    particlesContainer.appendChild(particle);
  }

  // -------------------- Text pas cu pas --------------------
  const steps = ["step1","step2","step3","step4"];
  let currentStep = 0;

  function showStep(stepIndex){
    if(stepIndex < steps.length){
      document.getElementById(steps[stepIndex]).style.display = "block";
    }
  }

  showStep(currentStep);

  const heart = document.getElementById('heart');
  const monkey = document.getElementById('monkey');
  const cat = document.getElementById('cat');
  const balloon = document.getElementById('balloon');
  const finalMessage = document.getElementById('finalMessage');

  heart.addEventListener('click', () => {
    currentStep++;
    if(currentStep < steps.length){
      showStep(currentStep);
      // AnimaÈ›ie maimuÈ›Äƒ È™i pisicÄƒ la fiecare click
      monkey.style.transform = `translateX(${Math.random()*50}px) rotate(${Math.random()*30-15}deg)`;
      cat.style.transform = `translateX(-${Math.random()*50}px) rotate(${Math.random()*30-15}deg)`;
    } else if(currentStep === steps.length){
      // Pas final: maimuÈ›a dÄƒ balonul pisicii
      balloon.style.display = "block";
      balloon.style.transition = "all 3s ease-in-out";
      balloon.style.transform = "translate(-50px, -300px) scale(1.2)";
      // MicÄƒ animaÈ›ie maimuÈ›Äƒ È™i pisicÄƒ
      monkey.style.transform = "translateX(20px) rotate(-10deg)";
      cat.style.transform = "translateX(-20px) rotate(10deg)";
      setTimeout(() => {
        finalMessage.style.display = "block";
        heart.style.display = "none";
      }, 3000);
    }
  });
</script>
